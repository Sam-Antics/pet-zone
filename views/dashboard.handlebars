          <button class="btn" data-language="javascript">Add a Pet</button>
          <button class="btn" data-language="html">View a Pet</button>
          <button class="btn" data-language="css">Set an Appointment</button>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
    <div class="col-12 col-md-6">
      <div class="card pet-info">
        <h2 class="subtitle">Your Pet Info <span id="repo-search-term"></span></h2>
        <div id="repos-container" class="list-group"></div>
      </div>
    </div>
  </div>
